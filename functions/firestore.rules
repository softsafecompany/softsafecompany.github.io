rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que qualquer usuário autenticado crie uma notificação
    // mas apenas o destinatário pode ler ou atualizar a sua própria.
    match /notifications/{notificationId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == resource.data.recipientId;
      allow delete: if false;
    }

    // Regras existentes para outras coleções...
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /products/{productId} {
      allow read: if true;
      // Clicks (visualizacoes): permite criar/atualizar sem auth apenas este campo.
      allow create: if (
          request.resource.data.keys().hasOnly(['clicks']) &&
          request.resource.data.clicks is number &&
          request.resource.data.clicks >= 0
        ) || (
          request.auth != null
          && request.resource.data.keys().hasOnly(['averageRating', 'ratingCount', 'clicks'])
          && request.resource.data.keys().hasAny(['averageRating', 'ratingCount', 'clicks'])
          && (!('averageRating' in request.resource.data) || (
              request.resource.data.averageRating is number
              && request.resource.data.averageRating >= 0
              && request.resource.data.averageRating <= 5
            ))
          && (!('ratingCount' in request.resource.data) || (
              request.resource.data.ratingCount is number
              && request.resource.data.ratingCount >= 0
            ))
          && (!('clicks' in request.resource.data) || (
              request.resource.data.clicks is number
              && request.resource.data.clicks >= 0
            ))
        );

      // Em update: permite clicks sem auth; agregados de avaliacao exigem auth.
      allow update: if (
          request.resource.data.diff(resource.data).changedKeys().hasOnly(['clicks']) &&
          request.resource.data.clicks is number &&
          request.resource.data.clicks >= 0 &&
          request.resource.data.clicks >= resource.data.clicks
        ) || (
          request.auth != null
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['averageRating', 'ratingCount', 'clicks'])
          && (!('averageRating' in request.resource.data) || (
              request.resource.data.averageRating is number
              && request.resource.data.averageRating >= 0
              && request.resource.data.averageRating <= 5
            ))
          && (!('ratingCount' in request.resource.data) || (
              request.resource.data.ratingCount is number
              && request.resource.data.ratingCount >= 0
            ))
          && (!('clicks' in request.resource.data) || (
              request.resource.data.clicks is number
              && request.resource.data.clicks >= 0
            ))
        );
      allow delete: if false;

      match /ratings/{userId} {
        allow read: if true;
        // Cada usuário autenticado só pode criar/editar a própria avaliação
        allow create, update: if request.auth != null
          && request.auth.uid == userId
          && request.resource.data.userId == request.auth.uid
          && request.resource.data.rating is int
          && request.resource.data.rating >= 1
          && request.resource.data.rating <= 5
          && request.resource.data.comment is string
          && request.resource.data.comment.size() <= 1000
          && request.resource.data.userName is string
          && request.resource.data.userName.size() <= 80
          && request.resource.data.timestamp is timestamp;
        allow delete: if false;
      }
    }

    match /news_stats/{newsId} {
      allow read: if true;
      allow create, update: if request.auth != null
        && request.resource.data.keys().hasOnly(['views', 'likesCount', 'commentsCount'])
        && (!('views' in request.resource.data) || request.resource.data.views is number)
        && (!('likesCount' in request.resource.data) || request.resource.data.likesCount is number)
        && (!('commentsCount' in request.resource.data) || request.resource.data.commentsCount is number);
      allow delete: if false;

      // Permite que qualquer usuário autenticado leia e crie comentários.
      // O campo 'userId' será usado pela lógica do app para notificações.
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
      }

      match /likes/{userId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /messages/{messageId} {
      allow create: if request.auth != null;
      allow read: if false; // Ninguém deve ler as mensagens pelo app
      allow update, delete: if false;
    }
  }
}
