rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que qualquer usuário autenticado crie uma notificação
    // mas apenas o destinatário pode ler ou atualizar a sua própria.
    match /notifications/{notificationId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == resource.data.recipientId;
      allow delete: if false;
    }

    // Regras existentes para outras coleções...
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Escrita apenas via Cloud Functions (Admin SDK)
      match /ratings/{userId} {
        allow read: if true;
        allow write: if false;
      }
    }

    match /news_stats/{newsId} {
      allow read: if true;
      allow create, update: if request.auth != null
        && request.resource.data.keys().hasOnly(['views', 'likesCount', 'commentsCount'])
        && (!('views' in request.resource.data) || request.resource.data.views is number)
        && (!('likesCount' in request.resource.data) || request.resource.data.likesCount is number)
        && (!('commentsCount' in request.resource.data) || request.resource.data.commentsCount is number);
      allow delete: if false;

      // Permite que qualquer usuário autenticado leia e crie comentários.
      // O campo 'userId' será usado pela lógica do app para notificações.
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
      }

      match /likes/{userId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /messages/{messageId} {
      allow create: if request.auth != null;
      allow read: if false; // Ninguém deve ler as mensagens pelo app
      allow update, delete: if false;
    }
  }
}
